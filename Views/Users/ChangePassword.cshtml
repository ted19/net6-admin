@model webAdmin.ViewModels.ChangePassword

@{
    ViewData["Title"] = "ChangePassword";
	Layout = "_BasicLayout";
}

<div class="container d-flex flex-column">
	<div class="row vh-100">
		<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
			<div class="d-table-cell align-middle">

				<div class="text-center mt-4">
					<h1 class="h2">Admin</h1>
					<p class="lead">
						Change Password
					</p>
				</div>

				<div class="card">
					<div class="card-body">
						<div class="m-sm-4">
							<form asp-action="ChangePassword">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>

								<div class="mb-3">
									<label asp-for="user_id" class="form-label"></label>
									<input asp-for="user_id" class="form-control form-control-lg" placeholder="Enter your id" />
									<span asp-validation-for="user_id" class="text-danger"></span>
								</div>
								<div class="mb-3">
									<label asp-for="user_pw" class="form-label"></label>									
									<small class="float-end">
										<a href="~/Users/ResetPassword">Forgot password?</a> <br/>
									</small>
									<input asp-for="user_pw" class="form-control form-control-lg" type="password" placeholder="Enter your current password" />
									<span asp-validation-for="user_pw" class="text-danger"></span>
								</div>
								<div class="mb-3">
									<label asp-for="new_user_pw" class="form-label"></label>
									<input asp-for="new_user_pw" class="form-control form-control-lg" type="password" placeholder="Enter your new password" />
									<span asp-validation-for="new_user_pw" class="text-danger"></span>
								</div>
								<div class="mb-3">
									<label asp-for="new_user_pw_confirm" class="form-label"></label>
									<input asp-for="new_user_pw_confirm" class="form-control form-control-lg" type="password" placeholder="Enter your re-enter new password" />
									<span asp-validation-for="new_user_pw_confirm" class="text-danger"></span>
								</div>
								<div class="text-center mt-3">
									<input type="submit" value="Save Changes" class="btn btn-lg btn-primary" />
								</div>
							</form>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
