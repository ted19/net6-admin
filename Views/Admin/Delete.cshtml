@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model webAdmin.ViewModels.Admin

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid p-0">

	<h1 class="h3 mb-3">@Localizer["Admin delete"]</h1>

	<div class="row">
		<div class="col-md-4 col-xl-4">
			<div class="card">
                <div class="card-body">
                    <div class="m-sm-4">
                        <form asp-action="Delete">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label asp-for="user_id" class="control-label"></label>
                                <input asp-for="user_id" class="form-control form-control-lg" placeholder="Enter your id" disabled/>
                                <span asp-validation-for="user_id" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="name" class="control-label"></label>
                                <input asp-for="name" class="form-control form-control-lg" placeholder="Enter your name" disabled/>
                                <span asp-validation-for="name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="dept" class="control-label"></label>
                                <input asp-for="dept" class="form-control form-control-lg" placeholder="Enter your department" disabled/>
                                <span asp-validation-for="dept" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="email" class="control-label"></label>
                                <input asp-for="email" class="form-control form-control-lg" type="email" placeholder="Enter your email" disabled/>
                                <span asp-validation-for="email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
                            </div>
                        </form>
                        <div>
                            <a asp-action="Index">@Localizer["Back to list"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}